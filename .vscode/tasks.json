{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "suppressTaskName": true,
  "options": {
    "cwd": "${workspaceRoot}/server"
  },
  "tasks": [
    {
      "taskName": "install",
      "args": ["install"]
    },
    {
      "taskName": "update",
      "args": ["update"]
    },
    {
      "taskName": "test",
      "args": ["test"],
      "isTestCommand": true,
      "showOutput": "silent",
      "problemMatcher": {
        "owner": "javascript",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "not ok \\d+ (.*)",
            "message": 1
          },
          {
            "regexp": "---"
          },
          {
            "regexp": "operator:"
          },
          {
            "regexp": "expected:"
          },
          {
            "regexp": "actual:"
          },
          {
            "regexp": "at: (?:((?:\\[object object\\])?\\S+(?: \\[as \\S+\\])?) )?\\(?(.*?):(\\d+)(?::(\\d+))?\\)?",
            "file": 2,
            "line": 3,
            "column": 4
          }
        ]
      }
    }
  ]
}