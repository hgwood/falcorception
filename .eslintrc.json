{
  "extends": "eslint:recommended",
  "ecmaVersion": 6,
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "comma-dangle": [1, "always-multiline"],
    "curly": [2, "multi-line"],

    "no-unused-vars": 1,

    "eol-last": 1,
    "quotes": [1, "double", "avoid-escape"],
    "semi": [1, "never"],
    "no-shadow": 1
  }
}
